{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "moduleResolution": "node",
    "declaration": true,
    "downlevelIteration": true,
    "declarationMap": false,
    "module": "esnext",
    "target": "esnext",
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@libmedia/avcodec": ["./packages/avcodec/src"],
      "@libmedia/avformat": ["./packages/avformat/src"],
      "@libmedia/avformat/internal": ["./packages/avformat/src/internal"],
      "@libmedia/avnetwork": ["./packages/avnetwork/src"],
      "@libmedia/avrender": ["./packages/avrender/src"],
      "@libmedia/avrender/registerProcessor": ["./packages/avrender/src/pcm/audioWorklet/base/registerProcessor"],
      "@libmedia/audiostretchpitch": ["./packages/audiostretchpitch/src"],
      "@libmedia/audioresample": ["./packages/audioresample/src"],
      "@libmedia/avutil": ["./packages/avutil/src"],
      "@libmedia/avutil/internal": ["./packages/avutil/src/internal"],
      "@libmedia/videoscale": ["./packages/videoscale/src"],
      "@libmedia/cheap": ["./packages/cheap/src"],
      "@libmedia/cheap/internal": ["./packages/cheap/src/internal"],
      "@libmedia/cheap/runThread": ["./packages/cheap/src/thread/runThread"],
      "@libmedia/avpipeline": ["./packages/avpipeline/src"],
      "@libmedia/avfilter": ["./packages/avfilter/src"],
      "@libmedia/common": ["./packages/common/src"],
      "@libmedia/common/io": ["./packages/common/src/io"],
      "@libmedia/common/timer": ["./packages/common/src/timer"],
      "@libmedia/common/math": ["./packages/common/src/math"],
      "@libmedia/common/network": ["./packages/common/src/network"],
      "@libmedia/common/constant": ["./packages/common/src/util/constant"],
      "@libmedia/common/sourceLoad": ["./packages/common/src/function/sourceLoad"],
      "@libmedia/avprotocol/*": ["./packages/avprotocol/src/*"],
      "@libmedia/avplayer": ["./packages/avplayer/src/AVPlayer"],

      "@libmedia/avformat/IFlvFormat": ["./packages/avformat/src/formats/IFlvFormat"],
      "@libmedia/avformat/IIsobmffFormat": ["./packages/avformat/src/formats/IIsobmffFormat"],
      "@libmedia/avformat/IMpegtsFormat": ["./packages/avformat/src/formats/IMpegtsFormat"],
      "@libmedia/avformat/IMpegpsFormat": ["./packages/avformat/src/formats/IMpegpsFormat"],
      "@libmedia/avformat/IIvfFormat": ["./packages/avformat/src/formats/IIvfFormat"],
      "@libmedia/avformat/IOggFormat": ["./packages/avformat/src/formats/IOggFormat"],
      "@libmedia/avformat/IMp3Format": ["./packages/avformat/src/formats/IMp3Format"],
      "@libmedia/avformat/IMatroskaFormat": ["./packages/avformat/src/formats/IMatroskaFormat"],
      "@libmedia/avformat/IAacFormat": ["./packages/avformat/src/formats/IAacFormat"],
      "@libmedia/avformat/IFlacFormat": ["./packages/avformat/src/formats/IFlacFormat"],
      "@libmedia/avformat/IWavFormat": ["./packages/avformat/src/formats/IWavFormat"],
      "@libmedia/avformat/IWebVttFormat": ["./packages/avformat/src/formats/IWebVttFormat"],
      "@libmedia/avformat/ISubRipFormat": ["./packages/avformat/src/formats/ISubRipFormat"],
      "@libmedia/avformat/IAssFormat": ["./packages/avformat/src/formats/IAssFormat"],
      "@libmedia/avformat/ITtmlFormat": ["./packages/avformat/src/formats/ITtmlFormat"],
      "@libmedia/avformat/IH264Format": ["./packages/avformat/src/formats/IH264Format"],
      "@libmedia/avformat/IHevcFormat": ["./packages/avformat/src/formats/IHevcFormat"],
      "@libmedia/avformat/IVvcFormat": ["./packages/avformat/src/formats/IVvcFormat"],
      "@libmedia/avformat/IRtspFormat": ["./packages/avformat/src/formats/IRtspFormat"],
      "@libmedia/avformat/IAviFormat": ["./packages/avformat/src/formats/IAviFormat"],

      "@libmedia/avformat/OFlvFormat": ["./packages/avformat/src/formats/OFlvFormat"],
      "@libmedia/avformat/OIsobmffFormat": ["./packages/avformat/src/formats/OIsobmffFormat"],
      "@libmedia/avformat/OMpegtsFormat": ["./packages/avformat/src/formats/OMpegtsFormat"],
      "@libmedia/avformat/OIvfFormat": ["./packages/avformat/src/formats/OIvfFormat"],
      "@libmedia/avformat/OOggFormat": ["./packages/avformat/src/formats/OOggFormat"],
      "@libmedia/avformat/OMp3Format": ["./packages/avformat/src/formats/OMp3Format"],
      "@libmedia/avformat/OWavFormat": ["./packages/avformat/src/formats/OWavFormat"],
      "@libmedia/avformat/OFlacFormat": ["./packages/avformat/src/formats/OFlacFormat"],
      "@libmedia/avformat/OAacFormat": ["./packages/avformat/src/formats/OAacFormat"],
      "@libmedia/avformat/OMatroskaFormat": ["./packages/avformat/src/formats/OMatroskaFormat"],
      "@libmedia/avformat/OH26XFormat": ["./packages/avformat/src/formats/OH26XFormat"],

      "@libmedia/avnetwork/HlsIOLoader": ["./packages/avnetwork/src/ioLoader/HlsIOLoader"],
      "@libmedia/avnetwork/DashIOLoader": ["./packages/avnetwork/src/ioLoader/DashIOLoader"],
      "@libmedia/avnetwork/RtmpIOLoader": ["./packages/avnetwork/src/ioLoader/RtmpIOLoader"]
    },
    "typeRoots": [
      "./node_modules/@types",
    ],
    "types": [
      "node",
      "jest"
    ],
    "lib": [
      "dom",
      "ESNext"
    ],
    "allowJs": false
  },
  "include": [
    "packages/**/*.ts",
    "@types/index.d.ts",
    "examples/**/*.ts"
  ],
  "exclude": [
    "*.test.ts",
    "__test__",
    "/node_modules/**",
    "**/dist/",
    "*.d.ts"
  ],
  "files": [
    "./@types/index.d.ts"
  ],
  "cheap": {
    "defined": {
      // 编译 64 位
      "WASM_64": false,
      // 开启 debug 编译
      "DEBUG": false,
      // 开启 trace log
      "ENABLE_LOG_TRACE": false,
      // 开启 csp 模式编译
      "ENV_CSP": false,

      // 开启多线程
      "ENABLE_THREADS": true,
      // 是否开启多线程代码分割
      "ENABLE_THREADS_SPLIT": false,
      // 保留 bigint 字面量
      "BIGINT_LITERAL": false,
      // 初始堆大小
      "CHEAP_HEAP_INITIAL": 265,

      // 开启支持 hls 协议
      "ENABLE_PROTOCOL_HLS": true,
      // 开启支持 dash 协议
      "ENABLE_PROTOCOL_DASH": true,
      // 开启支持 rtsp 协议
      "ENABLE_PROTOCOL_RTSP": true,
      // 开启支持 rtmp 协议
      "ENABLE_PROTOCOL_RTMP": true,

      // 开启支持 mpegts 解封装格式
      "ENABLE_DEMUXER_MPEGTS": true,
      // 开启支持 mpegps 解封装格式
      "ENABLE_DEMUXER_MPEGPS": true,
      // 开启支持 ISOBMFF 解封装格式
      "ENABLE_DEMUXER_ISOBMFF": true,
      // 开启支持 flv 解封装格式
      "ENABLE_DEMUXER_FLV": true,
      // 开启支持 ivf 解封装格式
      "ENABLE_DEMUXER_IVF": true,
      // 开启支持 ogg 解封装格式
      "ENABLE_DEMUXER_OGG": true,
      // 开启支持 mp3 解封装格式
      "ENABLE_DEMUXER_MP3": true,
      // 开启支持 matroska 解封装格式
      "ENABLE_DEMUXER_MATROSKA": true,
      // 开启支持 aac 解封装格式
      "ENABLE_DEMUXER_AAC": true,
      // 开启支持 flac 解封装格式
      "ENABLE_DEMUXER_FLAC": true,
      // 开启支持 wav 解封装格式
      "ENABLE_DEMUXER_WAV": true,
      // 开启支持 webvtt 解封装格式
      "ENABLE_DEMUXER_WEBVTT": true,
      // 开启支持 srt 解封装格式
      "ENABLE_DEMUXER_SUBRIP": true,
      // 开启支持 ass 解封装格式
      "ENABLE_DEMUXER_ASS": true,
      // 开启支持 ttml 解封装格式
      "ENABLE_DEMUXER_TTML": true,
      // 开启支持 h264 解封装格式
      "ENABLE_DEMUXER_H264": true,
      // 开启支持 hevc 解封装格式
      "ENABLE_DEMUXER_HEVC": true,
      // 开启支持 vvc 解封装格式
      "ENABLE_DEMUXER_VVC": true,
      // 开启支持 avi 解封装格式
      "ENABLE_DEMUXER_AVI": true,

      // 开启支持 flv 封装格式
      "ENABLE_MUXER_FLV": true,
      // 开启支持 ISOBMFF 封装格式
      "ENABLE_MUXER_ISOBMFF": true,
      // 开启支持 mp3 封装格式
      "ENABLE_MUXER_MP3": true,
      // 开启支持 matroska 封装格式
      "ENABLE_MUXER_MATROSKA": true,
      // 开启支持 ivf 封装格式
      "ENABLE_MUXER_IVF": true,
      // 开启支持 mpegts 封装格式
      "ENABLE_MUXER_MPEGTS": true,
      // 开启支持 ogg 封装格式
      "ENABLE_MUXER_OGG": true,
      // 开启支持 wav 封装格式
      "ENABLE_MUXER_WAV": true,
      // 开启支持 flac 封装格式
      "ENABLE_MUXER_FLAC": true,
      // 开启支持 h26x 封装格式
      "ENABLE_MUXER_H26X": true,
      // 开启支持 aac 封装格式
      "ENABLE_MUXER_AAC": true,

      // 开启支持 mse 模式
      "ENABLE_MSE": true,
      // 是否开启 worker 代理，在不支持多线程的环境下可以使用 worker
      // 将一些任务放到 worker 中执行
      "ENABLE_WORKER_PROXY": true,
      // webgpu 编译开关
      "ENABLE_WEBGPU": true,
      // 高 bitDepth 和 HDR 支持编译开关
      "ENABLE_RENDER_16": true,
      // 是否开启字幕渲染功能
      "ENABLE_SUBTITLE_RENDER": true,
      // 打印日志是否显示文件名和行号编译开关
      "ENABLE_LOG_PATH": true,

      // AVFrame 字段可选项，不同版本的 FFmpeg 可能不同
      "API_FRAME_KEY": true,
      "API_INTERLACED_FRAME": true,
      "API_PALETTE_HAS_CHANGED": true,
      "API_FRAME_PKT": true,

      "VERSION": "n0.0.1"
    },
    "structPaths": {
      "./packages/cheap/src/**/*": "@libmedia/cheap",
      "./packages/avutil/src/**/*": "@libmedia/avutil",
      "./packages/avrender/src/**/*": "@libmedia/avrender",
      "./packages/avpipeline/src/**/*": "@libmedia/avpipeline"
    }
  }
}